<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/afd_tableContentView"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/afd_listbackground"
    android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/afd_tableContentMenu"
            android:background="@drawable/afd_topmenu"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:layout_gravity="center" >
            <TextView
                android:textColor="#000000"
                android:textSize="23dip"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:id="@+id/afd_tvChapterName"/>

            <ImageButton
                android:layout_marginLeft="8dip"
                android:id="@+id/afd_continueReadingBtn"
                android:layout_width="50dip"
                android:layout_height="48dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:src="@drawable/afd_backreadview"/>
             
        </RelativeLayout>

    <RelativeLayout   
        android:layout_marginTop="0dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="20dip"
        android:background="@drawable/afd_listview_shape"     
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_margin="5dip"
            android:id="@+id/afd_lvTableContentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000" 
            android:listSelector="#f6faf1">
        </ListView>
    </RelativeLayout>

</LinearLayout>